
<div class="card">
  <div class="card-body">
    <h1 class="display-4">
      <strong>
        <%= @friend.first_name %>
        <%= @friend.last_name %>
      </strong>
    </h1>
    <p class="lead">
      <strong>Email:</strong><%= @friend.Email %> |  
      <strong>Phone:</strong><%= @friend.phone %> | 
      <strong>Facebook:</strong><%= @friend.facebook %>
    </p>
    <div class="mt-4">
        <%= link_to 'Edit', edit_friend_path(@friend), class:"btn btn-secondary" %>
        <%= link_to 'Back', friends_path, class:"btn btn-secondary" %>
    </div>
  </div>
</div>

